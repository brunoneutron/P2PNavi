<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ToText"
        android:textSize="30dp"
        android:text="To:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/recepientEmail"
        android:hint="Recepients Email"
        android:paddingTop="16dp"
        android:textSize="30dp"
        android:layout_below="@id/ToText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/SubjectText"
        android:textSize="30dp"
        android:text="Subject:"
        android:layout_below="@id/recepientEmail"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/Subject"
        android:hint="Mail Subject"
        android:paddingTop="16dp"
        android:textSize="30dp"
        android:layout_below="@id/SubjectText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Msg"
        android:textSize="30dp"
        android:text="Message:"
        android:layout_below="@id/Subject"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/Messge"
        android:hint="Message"
        android:paddingTop="16dp"
        android:textSize="30dp"
        android:layout_below="@id/Msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Messge"
        android:text="Send"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        />

</RelativeLayout>