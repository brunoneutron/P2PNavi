<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_image"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/tobBar"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.36">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:id="@+id/textFiedlHolder"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etName"
                android:hint="Your Name"/>
                <!--android:background="@color/first_color"-->

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etPhonenumber"
                android:hint="Phone Number"
                android:textIsSelectable="false"/>
            <!--android:background="@color/second_color"-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/email_address"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />
            <!--android:background="@color/third_color"-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:hint="Password"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/signup_ImageButton"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/register_button"
                android:onClick="userReg" />
            <!--android:background="@color/fourth_color"-->



    </LinearLayout>

    </LinearLayout>

</LinearLayout>